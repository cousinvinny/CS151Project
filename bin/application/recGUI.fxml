<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.recGUIChoiceBoxController">
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="165.0">
               <children>
                  <Label alignment="TOP_LEFT" text="New Recommendation" VBox.vgrow="NEVER">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="fnTextField" promptText="First Name">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="tsTextField" promptText="Target School">
                     <VBox.margin>
                        <Insets top="22.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="1st Semester Taken">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="semTakeCB" prefWidth="150.0" />
                  <Label text="Personal Characteristics">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="pcCB" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="165.0">
               <children>
                  <TextField fx:id="lnTextField" promptText="Last Name">
                     <VBox.margin>
                        <Insets top="34.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Target Program">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="tpCB" prefWidth="150.0" />
                  <TextField fx:id="semYearTextField" promptText="1st Semester Year">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="compileButton" mnemonicParsing="false" onAction="#compileRec" text="Compile">
                     <VBox.margin>
                        <Insets top="23.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="165.0">
               <children>
                  <Label text="Gender">
                     <VBox.margin>
                        <Insets top="17.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="genCB" prefWidth="150.0" />
                  <DatePicker fx:id="datePick" promptText="Current Date">
                     <VBox.margin>
                        <Insets top="22.0" />
                     </VBox.margin>
                  </DatePicker>
                  <Label text="Academic Characteristics">
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="acCB" prefWidth="150.0" />
                  <Button fx:id="logoutRECBTN" mnemonicParsing="false" onAction="#logOut" text="Logout">
                     <VBox.margin>
                        <Insets top="23.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="70.0" left="70.0" right="70.0" top="70.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
